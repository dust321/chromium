# random is good for you
/dev/urandom r

# needed for the main process for initialization
/dev/drm0 rw

# needed for chromium
/etc/chromium r

# needed for fontconfig
/etc/fonts r

# needed for resolving
/etc/hosts r
/etc/resolv.conf r

# needed for IPC communication, X.Org, etc.
/tmp rwc

# misc. files and libraries
/usr/local/lib r
/usr/local/chrome r
/usr/local/share r

# fontconfig
/var/cache/fontconfig r

# drm and misc xorg stuff
/usr/X11R6/lib r
/usr/X11R6/share r

# needs /var/run in case /var/run/dbus is not available
# needed by messagebus
/var/run rw

# ~ gets expanded to $HOME
~/.Xauthority r
~/.Xdefaults r
~/.cache rwc
~/.fontconfig r
~/.config rwc
~/.pki rwc
~/.config/gtk-3.0 r
~/.local rwc
~/.aucat_cookie rw
~/Downloads rwc
